<%= form_for @office, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :office_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :office_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :geoinfo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :geoinfo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :geofence, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :geofence, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                offices_path, :class => 'btn' %>
  </div>
<% end %>
