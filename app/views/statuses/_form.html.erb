<%= form_for @status, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :in_out, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :in_out, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :on_off, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :on_off, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status_select_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :status_select_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :current_location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :current_location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :return, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :return, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :employee_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :employee_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                statuses_path, :class => 'btn' %>
  </div>
<% end %>
